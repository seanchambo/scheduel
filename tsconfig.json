{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declarationDir": "./dist",
    "declaration": true,
    "experimentalDecorators": true,
    "types": [
      "node",
      "jest",
      "react-dom"
    ],
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "inlineSourceMap": true,
    "outDir": "lib",
    "lib": [
      "es7",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}